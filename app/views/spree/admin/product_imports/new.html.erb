 <div class="col-md-6">
  <div class="panel panel-info">
    <div class="panel-heading">Import CSV</div>
    <div class="panel-body">
      <%= render partial: 'spree/shared/error_messages', locals: { target: @order } %>
      <%= form_for(@product_import, url: admin_product_imports_path, class: 'form-horizontal') do |f|%>
        <fieldset>
          <div class="form-group">
            <%= label_tag :import_file, Spree.t(:filename), class: 'col-md-2 control-label', required: true   %>
            <div class="col-md-10">
              <%= f.file_field :import_file, accept: 'text/csv' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-10 col-md-offset-1">
              <%= submit_tag Spree.t(:import, scope: :product_import), class: 'btn btn-primary' %>
            </div>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
